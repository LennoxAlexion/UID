package net.sourceforge.zbar.android.CameraTest;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.TextView;


/**
 * Created by lennox on 11/2/15.
 */
public class ResultActivity extends Activity {

	
	TextView CodedText;
	TextView DecodedText;
	String DecText;
	EditText KeyInput;
	Button Submit;

	public void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.resultlayout);
		DecText = getIntent().getStringExtra("SCANNED_TEXT");
		CodedText = (TextView) findViewById(R.id.Scanned_Code);
		DecodedText = (TextView) findViewById(R.id.Result);
		KeyInput= (EditText) findViewById(R.id.KeyET);
		Submit= (Button) findViewById(R.id.SubmitButton);

		Log.e("Dec Text: ", "" + DecText);
		CodedText.setText(""+DecText);
		 
		
		Submit.setOnClickListener(new OnClickListener() {
			
			@Override
			public void onClick(View v) {
				// TODO Auto-generated method stub
				DecodedText.setText(Cipher.decrypt(DecText, KeyInput.getText().toString()));
				
			}
		});
			
		
	}

	
	public void onBackPressed() {

		finishAffinity();
		Intent intent = new Intent(getApplicationContext(),
				CameraTestActivity.class);
		startActivity(intent);

	}

}
